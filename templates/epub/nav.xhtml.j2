<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops" xml:lang="{{ idioma }}" lang="{{ idioma }}">
  <head>
    <title>Sumário</title>
    <meta charset="utf-8" />
  </head>
  <body>
    <nav epub:type="toc" id="toc">
      <h1>Sumário</h1>
      <ol>
        {% for parte in partes %}
          <li>
            <span>{{ parte.titulo }}</span>
            <ol>
              {% for cap in parte.capitulos %}
                <li><a href="{{ cap.arquivo }}">{{ cap.titulo }}</a></li>
              {% endfor %}
            </ol>
          </li>
        {% endfor %}
      </ol>
    </nav>
  </body>
</html>
