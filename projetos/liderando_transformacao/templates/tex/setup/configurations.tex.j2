% Template Jinja2 para configurações dos pacotes LaTeX (processado para gerar configurations.tex)

% --- Configuração de Layout e Margens ---
\geometry{
  a4paper,
  left=2.5cm,
  right=2.5cm,
  top=2.5cm,
  bottom=2.5cm
}

% --- Espaçamento de Linha ---
\setstretch{1.2}

% --- Hyperref Setup ---
\hypersetup{
    colorlinks=true,
    linkcolor=blue,
    filecolor=magenta,      
    urlcolor=cyan,
    pdftitle={{ metadados.titulo_livro | replace("\n", " ") }},
    pdfauthor={{ metadados.autor | replace("\n", " ") }},
    linktocpage=true % Makes the page number in the toc clickable
}

