% --- Configurações de Fonte ---
\setmainfont{Latin Modern Roman}
\setsansfont{Latin Modern Sans}

% --- Formatação de Títulos ---
% Nota: \chapter removido pois article class não suporta chapters
\titleformat{\section}[hang]
  {\sffamily\bfseries\color{DarkBlueHeading}\fontsize{24.0pt}{28.8pt}\selectfont}
  {\thesection}
  {1em}
  {}

\titlespacing*{\section}
  {0pt}{1.0cm}{0.5cm}

% --- Ajustes de Parágrafo ---
\setlength{\parindent}{0.5cm}
\setlength{\parskip}{0.2cm}

\DeclareRobustCommand{\paragraphbreak}{\vspace{0.2cm}\noindent}
